<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "d-flex flex-column-reverse" }) do |f| %>
  <div class="d-flex flex-column">  
    <div class="field">    
      <%= f.email_field :email, autofocus: true, placeholder:"Email", autocomplete: "email", class:"form-control mt-1 mb-1" %>
    </div>

    <div class="field">   
      <%= f.password_field :password, placeholder:"Password", autocomplete: "current-password", class:"form-control" %>
    </div>
  </div>
  <nav class="splash-nav">
    <%= link_to groups_path, class: 'splash-arrow' do %>
      <span class="material-symbols-outlined splash-arrow">
        arrow_back
      </span>
    <%end%>
      <h2 class="nav-bar-text">LOGIN</h2>  
      <%= f.submit "Log In", class: "login-submit-btn"%>
  </nav>   
<% end %>
<div class="d-flex justify-content-center mt-3">
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-text" %>
<% end %>
</div>

