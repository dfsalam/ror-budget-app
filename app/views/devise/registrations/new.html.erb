<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "d-flex flex-column-reverse" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="d-flex flex-column">
  <div class="mb-1">
    
    <%= f.text_field :name, placeholder: 'Full name', autofocus: true, class:"form-control" %>
  </div>

  <div class="mb-1">
    
    <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="mb-1">    
    <%= f.password_field :password, placeholder: 'Password', autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="mb-1">
    
    <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', autocomplete: "new-password", class:"form-control" %>
  </div>
</div>
  <nav class="splash-nav">
<%= link_to groups_path, class: 'splash-arrow' do %>
  <span class="material-symbols-outlined splash-arrow">
    arrow_back
  </span>
<%end%>
  <h2 class="nav-bar-text">REGISTER</h2>
  <%= f.submit "Sign Up", class: "login-submit-btn"%>
</nav>
<% end %>

