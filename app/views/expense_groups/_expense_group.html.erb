<div id="<%= dom_id expense_group  %>" class="card flex-direction-row mb-3 ms-3 me-3">
  <div class="mt-2 ms-2">
    <p>
      <strong>Amount:</strong> $
      <%= expense_group.amount %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= expense_group.group.name %>
    </p>

    <p>
      <strong>Transaction:</strong>
      <%= expense_group.expense.name %>
    </p>
  </div>
  <div class="me-2 fs-6 fst-italic fw-light d-flex justify-content-end">
    <p>
      <%= expense_group.created_at %>
    </p>
  </div>
</div>
