<%= form_with(model: expense_group, url: group_expense_groups_path) do |form| %>
  <% if expense_group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(expense_group.errors.count, "error") %> prohibited this expense_group from being saved:</h2>

      <ul>
        <% expense_group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-1 mt-1">    
    <%= form.text_field :name, placeholder: "Name", class:"form-control" %>
  </div>

  <div class="mb-1">    
    <%= form.text_field :amount, placeholder: "Amount", class:"form-control" %>
  </div>
  <div style="display: none;">
    <% if @group != nil %>
      <%= form.text_field :g_id, value: @group.id %>
    <% else %>
      <%= form.text_field :g_id, value: nil %>
    <% end %>
  </div>
  
  <div class="mt-3">
    <%= form.submit "SAVE", class: 'splash-btn green' %>
  </div>
<% end %>
